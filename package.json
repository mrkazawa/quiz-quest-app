{
  "name": "quiz-quest",
  "version": "1.0.0",
  "description": "A simple multiple choice quiz application like Kahoot",
  "private": true,
  "scripts": {
    "start": "npm run build:client && cd api && npm start",
    "dev:api": "cd api && npm run dev",
    "dev:client": "cd app-react && npm run dev",
    "dev:all": "concurrently \"npm run dev:api\" \"npm run dev:client\"",
    "build:client": "cd app-react && npm run build",
    "install:all": "npm run install:api && npm run install:client",
    "install:api": "cd api && npm install",
    "install:client": "cd app-react && npm install"
  },
  "keywords": [
    "quiz",
    "kahoot",
    "realtime",
    "socket.io"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
