# Quiz Quest Environment Variables
# Copy this file to .env and configure for your deployment

# ===========================================
# REQUIRED FOR PRODUCTION
# ===========================================

# Node Environment
NODE_ENV=production

# Teacher Password (change this!)
TEACHER_PASSWORD=your-secure-password-here

# Session Secret (REQUIRED for production)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
SESSION_SECRET=your-session-secret-here

# ===========================================
# CORS CONFIGURATION
# ===========================================

# Allowed origins (comma-separated)
# Examples:
#   For localhost.run: CORS_ORIGINS=https://*.lhr.life
#   For serveo.net: CORS_ORIGINS=https://*.serveo.net
#   For custom domain: CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
#   For local network: CORS_ORIGINS=http://192.168.1.100:3000
#   Multiple: CORS_ORIGINS=https://yourdomain.com,https://*.lhr.life
CORS_ORIGINS=https://*.lhr.life

# ===========================================
# PROXY CONFIGURATION
# ===========================================

# Set to 'true' if behind a reverse proxy (Nginx, localhost.run, serveo)
# This affects session cookie security settings
BEHIND_PROXY=false

# ===========================================
# TUNNELING OPTIONS (pick one)
# ===========================================

# localhost.run
LOCALHOST_RUN_ENABLED=false
LOCALHOST_RUN_PORT=3000

# Serveo.net
SERVEO_ENABLED=false
SERVEO_SUBDOMAIN=
SERVEO_PORT=3000

# ===========================================
# OPTIONAL
# ===========================================

# Server Port (default: 3000)
PORT=3000
